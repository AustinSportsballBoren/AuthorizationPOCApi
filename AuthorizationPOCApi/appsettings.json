{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning"
    }
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "formatter": "NetDocuments.Serilog.Formatter.NetDocumentsJsonFormatter, AuthorizationPOCApi"
        }
      }
    ],
    "Enrich": [ "WithMachineName", "WithExceptionDetails", "WithSpan", "WithTrace" ]
  },
  "AllowedHosts": "*"
}
